<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".PIDtune"
    android:paddingTop="50dp">


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pitch"
            android:id="@+id/text_pitch"
            android:layout_column="1"
            android:layout_columnWeight="0"
            android:textStyle="bold"
            android:layout_span="2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Roll"
            android:id="@+id/text_roll"
            android:layout_column="3"
            android:textStyle="bold"
            android:layout_span="2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Yaw"
            android:id="@+id/text_yaw"
            android:layout_column="5"
            android:textStyle="bold"
            android:layout_span="2"
            android:layout_gravity="center_horizontal" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kp"
            android:id="@+id/text_pitch_kp"
            android:layout_column="1"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pitch_kp"
            android:layout_column="2"
            android:text="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kp"
            android:id="@+id/text_kp_r"
            android:layout_column="3"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/roll_kp"
            android:layout_column="4"
            android:text="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kp"
            android:id="@+id/text_kp_y"
            android:layout_column="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/yaw_kp"
            android:layout_column="6"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ki"
            android:id="@+id/text_ki_pitch"
            android:layout_column="1"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pitch_ki"
            android:layout_column="2"
            android:text="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ki"
            android:id="@+id/text_ki_r"
            android:layout_column="3"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/roll_ki"
            android:layout_column="4"
            android:text="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ki"
            android:id="@+id/text_ki_y"
            android:layout_column="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/yaw_ki"
            android:layout_column="6"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kd"
            android:id="@+id/text_kd_pitch"
            android:layout_column="1"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pitch_kd"
            android:layout_column="2"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kd"
            android:id="@+id/text_kd_r"
            android:layout_column="3"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/roll_kd"
            android:layout_column="4"
            android:text="1"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kd"
            android:id="@+id/text_kd_y"
            android:layout_column="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/yaw_kd"
            android:layout_column="6"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Min"
            android:id="@+id/textView"
            android:layout_column="1"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pitch_min"
            android:layout_column="2"
            android:text="200"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Min"
            android:id="@+id/textView11"
            android:layout_column="3"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/roll_min"
            android:layout_column="4"
            android:text="200"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Min"
            android:id="@+id/textView12"
            android:layout_column="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/yaw_min"
            android:layout_column="6"
            android:text="200"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Max"
            android:id="@+id/textView13"
            android:layout_column="1"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pitch_max"
            android:layout_column="2"
            android:text="200"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Max"
            android:id="@+id/textView14"
            android:layout_column="3"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/roll_max"
            android:layout_column="4"
            android:text="200"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Max"
            android:id="@+id/textView15"
            android:layout_column="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/yaw_max"
            android:layout_column="6"
            android:text="200"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sp"
            android:id="@+id/textView16"
            android:layout_column="1"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pitch_sp"
            android:layout_column="2"
            android:text="0"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sp"
            android:id="@+id/textView17"
            android:layout_column="3"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/roll_sp"
            android:layout_column="4"
            android:text="0"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sp"
            android:id="@+id/textView18"
            android:layout_column="5"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/yaw_sp"
            android:layout_column="6"
            android:text="0"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="SET"
            android:id="@+id/pitch_btn"
            android:layout_column="1"
            android:layout_span="2"
            android:layout_gravity="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="SET"
            android:id="@+id/roll_btn"
            android:layout_column="3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_gravity="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:text="SET"
            android:id="@+id/yaw_btn"
            android:layout_column="5"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_gravity="center" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="New Text"
            android:id="@+id/textView7"
            android:layout_column="4" />
    </TableRow>

</TableLayout>